<%= render partial: "navbar",locals:{current: "explore"}%>

<section class="bg-white">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6 ">
      <div class="mx-auto max-w-screen-sm text-center mb-8 lg:mb-16">
          <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">Our Members</h2>
      </div> 
      <div class="grid gap-8 mb-6 lg:mb-16 md:grid-cols-2">
      <%@users.each do |user|%>
          <div class="items-center rounded-lg shadow sm:flex bg">
              <a href="#">
                  <img class="w-full rounded-lg sm:rounded-none sm:rounded-l-lg" src="<%= url_for(user.profile_picture)%>" alt="Bonnie Avatar">
              </a>
              <div class="p-5">
                  <h3 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white">
                      <a href="#"><%=user.full_name%></a>
                  </h3>
                  <p class="mt-3 mb-4 font-light text-gray-500 dark:text-gray-400"><%=user.email%></p>
                  <a href="/user/view/<%=user.id%>">View</a>
              </div>
          </div>  
      <%end%> 
      </div> 
  </div>
</section>